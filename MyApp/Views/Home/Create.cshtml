@model MyApp.Models.Creative
@{
    ViewBag.Title = "Creating new creative";
}
<h2>@ViewBag.Title</h2>
<form asp-action="create" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Creative name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label">Content</label>
        <textarea type="text" asp-for="Content" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
        @Html.ActionLink("Back", "Index")
    </div>
</form>